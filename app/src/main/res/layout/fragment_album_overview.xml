<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

   <android.support.v7.widget.AppCompatImageView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/artist_overview_image"
       android:layout_marginTop="40dp"/>
   <android.support.v7.widget.AppCompatTextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/artist_overview_name"
       android:textSize="24dp"
       android:textAlignment="center"
       android:layout_below="@id/artist_overview_image"/>
   <android.support.v7.widget.AppCompatTextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="album name"
       android:textSize="16dp"
       android:id="@+id/album_name"
       android:layout_below="@id/artist_overview_name"
       android:textAlignment="center" />
   <android.support.v7.widget.AppCompatTextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/playcount"
       android:textSize="16dp"
       android:layout_below="@id/album_name"
       android:textAlignment="center" />
   <android.support.v7.widget.AppCompatButton
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="save"
       android:background="@color/colorPrimaryDark"
       android:textColor="#fff"
       android:textSize="20dp"
       android:layout_marginLeft="20dp"
       android:layout_marginRight="20dp"
       android:layout_below="@id/playcount"
       android:id="@+id/save_button"
       android:textAlignment="center"
       android:layout_marginTop="20dp"/>
    <android.support.v7.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="delete"
        android:layout_below="@id/playcount"
        android:id="@+id/delete_button"
        android:textAlignment="center"
        android:background="@color/colorPrimaryDark"
        android:textColor="#fff"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:visibility="invisible"/>
    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/onSave"
        android:layout_below="@id/playcount"/>
</RelativeLayout>